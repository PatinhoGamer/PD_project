<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="400.0" minWidth="460.0" prefHeight="400.0" prefWidth="460.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pt.Client.RegistrationController">
    <children>
        <Label layoutX="15.0" layoutY="22.0" text="Name"/>
        <TextField fx:id="idName" layoutX="15.0" layoutY="39.0" onAction="#onRegister" prefHeight="25.0"
                   prefWidth="423.0"/>

        <Label layoutX="14.0" layoutY="71.0" text="Username"/>
        <TextField fx:id="idUsername" layoutX="15.0" layoutY="88.0" onAction="#onRegister" prefHeight="25.0"
                   prefWidth="423.0"/>

        <Label layoutX="17.0" layoutY="119.0" prefHeight="17.0" prefWidth="71.0" text="Password"/>
        <PasswordField fx:id="idPassword" layoutX="15.0" layoutY="136.0" prefHeight="25.0" prefWidth="423.0"/>

        <Label layoutX="14.0" layoutY="168.0" text="Repeat Password"/>
        <PasswordField fx:id="idRepeatPassword" layoutX="14.0" layoutY="188.0" prefHeight="25.0" prefWidth="423.0"/>

        <Label layoutX="16.0" layoutY="221.0" text="Photo PATH"/>
        <TextField fx:id="idPhotoPath" layoutX="16.0" layoutY="238.0" prefHeight="25.0" prefWidth="335.0"/>

        <Button layoutX="380.0" layoutY="344.0" mnemonicParsing="false" onAction="#onRegister" text="Register"/>
        <Label fx:id="errorLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="118.0" layoutY="348.0"
               maxWidth="250.0" prefWidth="250.0" textFill="RED"/>
        <Button fx:id="btnChoseImage" layoutX="355.0" layoutY="238.0" mnemonicParsing="false" onAction="#onChoseImg"
                text="Chose Image"/>
        <Button layoutX="19.0" layoutY="344.0" mnemonicParsing="false" onAction="#goBackLogin" text="back to Login"/>
    </children>
</AnchorPane>
